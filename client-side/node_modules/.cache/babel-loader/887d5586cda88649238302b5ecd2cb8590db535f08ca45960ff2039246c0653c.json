{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { getProfile, updateProfile } from \"../services/userService\";\nexport default {\n  name: \"EditProfile\",\n  data() {\n    return {\n      user: {\n        name: \"\",\n        email: \"\",\n        password: \"\"\n      },\n      showPopup: false // Control the display of the popup\n    };\n  },\n  async created() {\n    try {\n      const user = await getProfile();\n      this.user = {\n        ...user\n      };\n    } catch (error) {\n      console.error(\"Error fetching user profile:\", error);\n    }\n  },\n  methods: {\n    async handleEdit() {\n      try {\n        await updateProfile(this.user);\n        this.showPopup = true; // Show the popup on successful update\n      } catch (error) {\n        console.error(\"Error updating profile:\", error);\n      }\n    },\n    goToProfile() {\n      this.$router.push(\"/profile\");\n    },\n    goToTasks() {\n      this.$router.push(\"/tasks\"); // Redirect to the task list\n      this.showPopup = false; // Hide the popup after navigation\n    }\n  }\n};","map":{"version":3,"names":["getProfile","updateProfile","name","data","user","email","password","showPopup","created","error","console","methods","handleEdit","goToProfile","$router","push","goToTasks"],"sources":["D:\\Assessments\\tassc\\client-side\\src\\views\\EditProfile.vue"],"sourcesContent":["<template>\r\n  <div class=\"edit-profile-container\">\r\n    <h1>Edit Profile</h1>\r\n    <form @submit.prevent=\"handleEdit\">\r\n      <div class=\"form-group\">\r\n        <label for=\"name\">Name</label>\r\n        <input\r\n          v-model=\"user.name\"\r\n          type=\"text\"\r\n          id=\"name\"\r\n          placeholder=\"Name\"\r\n          required\r\n        />\r\n      </div>\r\n      <div class=\"form-group\">\r\n        <label for=\"email\">Email</label>\r\n        <input\r\n          v-model=\"user.email\"\r\n          type=\"email\"\r\n          id=\"email\"\r\n          placeholder=\"Email\"\r\n          required\r\n        />\r\n      </div>\r\n      <div class=\"form-group\">\r\n        <label for=\"password\">Password</label>\r\n        <input\r\n          v-model=\"user.password\"\r\n          type=\"password\"\r\n          id=\"password\"\r\n          placeholder=\"New Password\"\r\n        />\r\n      </div>\r\n      <button type=\"submit\" class=\"btn-primary\">Save Changes</button>\r\n    </form>\r\n    <div class=\"back-to-profile\">\r\n      <button @click=\"goToProfile\" class=\"btn-secondary\">\r\n        Back to Profile\r\n      </button>\r\n    </div>\r\n\r\n    <!-- Popup for success message -->\r\n    <div v-if=\"showPopup\" class=\"popup\">\r\n      <p>Changes have been saved successfully!</p>\r\n      <button @click=\"goToTasks\">Go Back to Task List</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { getProfile, updateProfile } from \"../services/userService\";\r\n\r\nexport default {\r\n  name: \"EditProfile\",\r\n  data() {\r\n    return {\r\n      user: {\r\n        name: \"\",\r\n        email: \"\",\r\n        password: \"\",\r\n      },\r\n      showPopup: false, // Control the display of the popup\r\n    };\r\n  },\r\n  async created() {\r\n    try {\r\n      const user = await getProfile();\r\n      this.user = { ...user };\r\n    } catch (error) {\r\n      console.error(\"Error fetching user profile:\", error);\r\n    }\r\n  },\r\n  methods: {\r\n    async handleEdit() {\r\n      try {\r\n        await updateProfile(this.user);\r\n        this.showPopup = true; // Show the popup on successful update\r\n      } catch (error) {\r\n        console.error(\"Error updating profile:\", error);\r\n      }\r\n    },\r\n    goToProfile() {\r\n      this.$router.push(\"/profile\");\r\n    },\r\n    goToTasks() {\r\n      this.$router.push(\"/tasks\"); // Redirect to the task list\r\n      this.showPopup = false; // Hide the popup after navigation\r\n    },\r\n  },\r\n};\r\n</script>\r\n\